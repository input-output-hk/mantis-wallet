    "eject": "react-scripts eject",
    "lint": "yarn prettier-check && yarn eslint",
    "eslint": "eslint src --ext .js,.ts,.tsx",
    "prettier-check": "prettier --no-editorconfig --check \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier --no-editorconfig --write \"**/*.{js,ts,tsx}\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron ."
  },
  "dependencies": {
    "@types/jest": "24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "12.12.14",
    "@types/react": "16.9.14",
    "@types/react-dom": "16.9.4",
    "@types/vfile-message": "^2.0.0",
    "classnames": "^2.2.6",
    "lodash": "^4.17.15",
    "prop-types": "^15.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-polymorph": "^0.9.0-rc.24",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "typescript": "3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && pretty-quick --staged --pattern \"**/*.*(js|ts|tsx)\""
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
