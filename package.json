    "react-test-renderer": "^17.0.1",
    "require-context.macro": "^1.2.2",
    "stylelint": "^12.0.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-property-sort-order-smacss": "^5.2.0",
