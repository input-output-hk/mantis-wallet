{
  "name": "mantis-wallet",
  "productName": "Mantis-Wallet",
  "version": "0.1.0",
  "compatibleDataDirVersions": "0.1.x",
  "private": true,
  "engines": {
    "node": "^12.13.0"
  },
  "build": {
    "appId": "io.iohkdev.project42.mantis-wallet",
    "linux": {
      "maintainer": "Shay Bergmann <shay.bergmann@iohk.io>",
      "executableName": "Mantis-Wallet"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "main": "build/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "cross-env EXTEND_ESLINT=true BROWSER=none react-app-rewired start",
    "start-main": "yarn build-main && yarn electron-dev",
    "build-renderer": "cross-env EXTEND_ESLINT=true react-app-rewired build",
    "build-main": "webpack --config webpack.main.config.js",
    "test": "cross-env EXTEND_ESLINT=true react-app-rewired test --env=jest-environment-jsdom-sixteen \"^((?!storyshots).)*$\"",
    "test:coverage": "yarn test --coverage",
    "storyshots": "cross-env EXTEND_ESLINT=true react-app-rewired test \"storyshots.*\"",
    "storyshots:update": "yarn storyshots --updateSnapshot && echo -ne '\\007'",
    "lint": "yarn prettier-check && yarn eslint && yarn stylelint && yarn tsc",
    "eslint": "eslint src bin --ext .js,.ts,.tsx --max-warnings 24",
    "stylelint": "stylelint \"**/*.scss\"",
    "prettier-check": "prettier --no-editorconfig --check \"**/*.{js,ts,tsx,scss}\"",
    "prettier": "prettier --no-editorconfig --write \"**/*.{js,ts,tsx,scss}\"",
    "dtslint": "dtslint --localTs node_modules/typescript/lib src/types/tests",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook",
    "electron": "electron ./build/main/main.js",
    "electron-dev": "wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron ./build/main/main.js",
    "electron-dev:hot": "wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 nodemon --exec electron ./build/main/main.js",
    "dev": "yarn build-main && concurrently --kill-others \"yarn start\" \"yarn electron-dev\"",
    "dev:hot": "concurrently --kill-others \"yarn start\" \"yarn build-main --watch\" \"yarn electron-dev:hot\"",
    "build-all": "yarn build-renderer && yarn build-main",
    "build-mantis": "ts-node --project tsconfig.bin.json ./bin/build-mantis.ts",
    "package": "ts-node --project tsconfig.bin.json ./bin/package.ts",
    "package-linux": "ts-node --project tsconfig.bin.json ./bin/package-linux.ts",
    "package-darwin": "ts-node --project tsconfig.bin.json ./bin/package-darwin.ts",
    "package-win": "ts-node --project ./tsconfig.bin.json ./bin/package-win.ts",
    "build-dist": "yarn build-all && yarn package",
    "build-dist-x86_64-linux": "yarn build-all && yarn package-linux",
    "build-dist-x86_64-darwin": "yarn build-all && yarn package-darwin",
    "build-dist-win": "yarn build-all && yarn package-win",
    "make-dmg": "electron-installer-dmg --out=dist dist/${npm_package_productName}-darwin-x64/${npm_package_productName}.app ${npm_package_productName}"
  },
  "husky": {
    "hooks": {
      "pre-push": "pretty-quick --staged --pattern \"**/*.*(js|ts|tsx|scss)\" && yarn lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.stories.tsx",
      "!ApiTest.tsx"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "./src/jest.config.ts"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.1.0",
    "antd": "4.3.0",
    "antd-scss-theme-plugin": "^1.0.8",
    "archiver": "^4.0.1",
    "async-validator": "^3.3.0",
    "babel-plugin-import": "^1.13.0",
    "bignumber.js": "^9.0.0",
    "bip39": "^3.0.2",
    "classnames": "^2.2.6",
    "convict": "^5.2.0",
    "customize-cra": "^0.9.1",
    "date-fns": "^2.10.0",
    "electron-log": "^4.2.2",
    "electron-store": "^5.1.1",
    "ethereumjs-wallet": "^1.0.0",
    "filesize": "^6.1.0",
    "fp-ts": "^2.4.1",
    "generate-password": "^1.5.1",
    "i18next": "^19.6.0",
    "io-ts": "^2.1.1",
    "js-file-download": "^0.4.9",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "lodash": "^4.17.19",
    "node-forge": "^0.10.0",
    "portfinder": "^1.0.28",
    "ps-tree": "^1.2.0",
    "qrcode.react": "^1.0.0",
    "raw-loader": "^4.0.2",
    "react": "^16.12.0",
    "react-app-rewired": "^2.1.5",
    "react-countup": "^4.3.3",
    "react-dom": "^16.12.0",
    "react-i18next": "^11.7.0",
    "react-infinite-scroller": "^1.2.4",
    "react-inlinesvg": "^1.2.0",
    "react-scripts": "^3.4.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "semver": "^7.3.2",
    "typescript": "^3.9.6",
    "unstated-next": "^1.1.0",
    "web3": "^1.3.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@electron-forge/cli": "^6.0.0-beta.47",
    "@electron-forge/maker-deb": "^6.0.0-beta.47",
    "@electron-forge/maker-rpm": "^6.0.0-beta.47",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.47",
    "@electron-forge/maker-zip": "^6.0.0-beta.47",
    "@storybook/addon-actions": "5.2.8",
    "@storybook/addon-knobs": "5.2.8",
    "@storybook/addon-links": "5.2.8",
    "@storybook/addon-notes": "5.1.9",
    "@storybook/addon-storyshots": "5.3.14",
    "@storybook/addon-storyshots-puppeteer": "5.3.14",
    "@storybook/addons": "5.2.8",
    "@storybook/react": "5.2.8",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^12.0.0",
    "@types/archiver": "^3.1.0",
    "@types/bignumber.js": "^5.0.0",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/classnames": "^2.2.9",
    "@types/convict": "^4.2.1",
    "@types/decompress": "^4.2.3",
    "@types/electron-store": "^3.2.0",
    "@types/lodash": "^4.14.149",
